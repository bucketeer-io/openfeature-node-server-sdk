{
  "include": ["src/**/*"],
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "lib",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true, // enables importers to jump to source
    "resolveJsonModule": true
  },
  "lib": ["es2015"],
  "exclude": ["lib"]
}
